{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2023", "DOM"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,

        "jsx": "react-jsx",

        "baseUrl": "src",
        "paths": {
            "@app/*": ["app/*"],
            "@shared/*": ["shared/*"],
            "@entities/*": ["entities/*"],
            "@features/*": ["features/*"],
            "@pages/*": ["pages/*"],
            "@widgets/*": ["widgets/*"]
        }
    },
    "include": ["src"]
}
